# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=__REPLACE__
TELEGRAM_WEBHOOK_SECRET=__REPLACE__
TELEGRAM_ALLOWED_USER_IDS=__REPLACE__

# Public URL for webhook (Railway will provide this)
PUBLIC_BASE_URL=https://your-app-name.up.railway.app

# Server Configuration
PORT=3000
NODE_ENV=production

# OpenCode Configuration
XDG_DATA_HOME=/data
DEFAULT_MODEL=openai/gpt-5.2-codex
MAX_CONCURRENT_JOBS=2
SESSION_IDLE_TIMEOUT_HOURS=3

# Paths (don't change these)
DATA_DIR=/data
WORKSPACE_BASE=/tmp/agent
LOG_LEVEL=info
